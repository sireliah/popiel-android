#:kivy 1.9.1
#:include panel.kv
#:import DebugPanel panel.DebugPanel
#:import ControlPanel panel.ControlPanel


PopielGame:

<PopielGame>:
    gameworld: gameworld
    GameWorld:
        id: gameworld
        gamescreenmanager: gamescreenmanager
        size_of_gameworld: 100 * 1024
        size_of_entity_block: 128
        system_count: 8
        zones: {'general': 10000, 'touch': 100}
        PositionSystem2D:
            system_id: 'position'
            gameworld: gameworld
            zones: ['general', 'touch']
            size_of_component_block: 128
        Renderer:
            gameworld: gameworld
            system_id: 'renderer'
            frame_count: 1
            zones: ['general']
            updateable: True
            size_of_batches: 512
            size_of_component_block: 128
            shader_source: 'data/assets/shaders/positionshaders.glsl'
        GameView:
            system_id: 'camera1'
            gameworld: gameworld
            size: root.size
            pos: root.pos
            updateable: True
            window_size: root.size
        ParallaxSystem:
            system_id: 'parallax'
            gameworld: gameworld
            updateable: True
            x_scope: root.x_scope
            y_scope: root.y_scope
            character_x: root.character_x
            character_entity_id: root.character_entity_id
        PhysicsSystem:
            system_id: 'physics'
            gameworld: gameworld
            updateable: True
            character_entity_id: root.character_entity_id
            character_jump: root.character_jump
            x_scope: root.x_scope
            y_scope: root.y_scope
            character_x: root.character_x

    GameScreenManager:
        id: gamescreenmanager
        size: root.size
        pos: root.pos
        gameworld: gameworld
        GameScreen:
            name: 'main'


<GameScreenManager>:
    MainScreen:
        id: main_screen


<MainScreen@GameScreen>:
    name: 'main'
    AnchorLayout:
        anchor_y: 'bottom'
        anchor_x: 'right'
        ControlPanel:
            size_hint: (0.2, 0.2)

        DebugPanel:
            size_hint: (0.2, 0.1)
